{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="Work history" big=true }}            
                <div>
                    <p>
                        <ul>
                            {{#each works}}
                                <li>
                                    <div>{{position}}</div>

                                    <br>

                                    <div>
                                        {{duration.from}} -
                                        {{#if duration.to}} 
                                            {{duration.to}} 
                                        {{else}} 
                                            (досі працюємо) 
                                        {{/if}}
                                    </div>

                                    <br>
                                    {{!-- <div><a href="{{company.url}}" target="_blank">{{company.name}}</a></div> --}}
                                    {{#if company.url}}
                                    <div>{{> link text=company.name href=company.url blank=true noLine=true }}</div>
                                    {{else}}
                                    <b>IT Brains</b>
                                    {{/if}}

                                    <br>
                                    <br>

                                    <div>
                                        <strong> Projects ({{projectAmount}})</strong>
                                    </div>

                                    <br>

                                    <ul>
                                        {{#each projects}}
                                        <li>
                                            <div>{{> link text=name href=url blank=true noLine=true }}</div>
                                            <br>
                                            <div><p>{{about}}</p></div>
                                            <br>
                                            <em> Project stacks ({{stactAmount}})</em> 
                                            {{#each stacks}}
                                            <li>
                                                {{name}}
                                            </li>
                                            {{/each}}
                                            <br>
                                            <em> Project awards ({{awardAmount}})</em> 
                                            <br>
                                             {{#each awards}}
                                            <li>
                                                {{name}}
                                            </li>
                                            {{/each}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                <br>
                            {{/each}}
                       </ul>
                    </p>
                </div>
            </section>            
        </main>
    {{/with}}
  
</div>

